-- Helper function to apply theme
local function applyTheme(themeName)
	rainbowActive = false
	glitchyActive = false
	currentTheme = themeName
	
	local theme = Themes[themeName]
	main.BackgroundColor3 = theme.Main
	sidebar.BackgroundColor3 = theme.Secondary
	top.BackgroundColor3 = theme.Secondary
	title.TextColor3 = theme.Text
	
	for _, btn in pairs(buttons) do
		btn.TextColor3 = theme.Text
	end
	for _, p in pairs(pages) do
		for _, c in pairs(p:GetChildren()) do
			if c:IsA("TextLabel") then
				c.TextColor3 = theme.Text
			end
		end
	end
	
	-- Update theme buttons
	darkBtn.TextColor3 = theme.Text
	darkBtn.BackgroundColor3 = theme.Secondary
	lightBtn.TextColor3 = theme.Text
	lightBtn.BackgroundColor3 = theme.Secondary
	greenRedBtn.TextColor3 = theme.Text
	greenRedBtn.BackgroundColor3 = theme.Secondary
	whiteBlackBtn.TextColor3 = theme.Text
	whiteBlackBtn.BackgroundColor3 = theme.Secondary
	yellowOrangeBtn.TextColor3 = theme.Text
	yellowOrangeBtn.BackgroundColor3 = theme.Secondary
	rainbowBtn.TextColor3 = theme.Text
	rainbowBtn.BackgroundColor3 = theme.Secondary
	glitchyBtn.TextColor3 = theme.Text
	glitchyBtn.BackgroundColor3 = theme.Secondary
end

darkBtn.MouseButton1Click:Connect(function()
	applyTheme("Dark")
end)

lightBtn.MouseButton1Click:Connect(function()
	applyTheme("Light")
end)

greenRedBtn.MouseButton1Click:Connect(function()
	applyTheme("GreenRed")
end)

whiteBlackBtn.MouseButton1Click:Connect(function()
	applyTheme("WhiteBlack")
end)

yellowOrangeBtn.MouseButton1Click:Connect(function()
	applyTheme("YellowOrange")
end)

rainbowBtn.MouseButton1Click:Connect(function()
	rainbowActive = true
	glitchyActive = false
end)

glitchyBtn.MouseButton1Click:Connect(function()
	glitchyActive = true
	rainbowActive = false
end)

-- Rainbow and Glitchy effects
game:GetService("RunService").RenderStepped:Connect(function()
	if rainbowActive then
		local hue = tick() % 5 / 5
		local color = Color3.fromHSV(hue, 1, 1)
		main.BackgroundColor3 = color
		sidebar.BackgroundColor3 = Color3.fromHSV((hue + 0.1) % 1, 0.8, 0.8)
		top.BackgroundColor3 = Color3.fromHSV((hue + 0.2) % 1, 0.8, 0.8)
	end
	
	if glitchyActive then
		if math.random() > 0.95 then
			main.BackgroundColor3 = Color3.fromRGB(
				math.random(0, 255),
				math.random(0, 255),
				math.random(0, 255)
			)
			sidebar.BackgroundColor3 = Color3.fromRGB(
				math.random(0, 255),
				math.random(0, 255),
				math.random(0, 255)
			)
			top.BackgroundColor3 = Color3.fromRGB(
				math.random(0, 255),
				math.random(0, 255),
				math.random(0, 255)
			)
		end
	end
end)

-- =========================
-- SMOOTH WINDOW DRAGGING
-- =========================
do
	local dragging = false
	local dragStart = Vector2.new()
	local startPos = UDim2.new()
	local dragInput

	-- Target position for smooth lerp
	local targetPos = main.Position

	local function update(input)
		local delta = input.Position - dragStart
		targetPos = UDim2.new(
			startPos.X.Scale,
			startPos.X.Offset + delta.X,
			startPos.Y.Scale,
			startPos.Y.Offset + delta.Y
		)
	end

	top.InputBegan:Connect(function(input)
		if input.UserInputType == Enum.UserInputType.MouseButton1 then
			dragging = true
			dragStart = input.Position
			startPos = main.Position

			input.Changed:Connect(function()
				if input.UserInputState == Enum.UserInputState.End then
					dragging = false
				end
			end)
		end
	end)

	top.InputChanged:Connect(function(input)
		if input.UserInputType == Enum.UserInputType.MouseMovement then
			dragInput = input
		end
	end)

	UserInputService.InputChanged:Connect(function(input)
		if input == dragInput and dragging then
			update(input)
		end
	end)

	-- Smoothly move the frame every render step
	game:GetService("RunService").RenderStepped:Connect(function(dt)
		main.Position = UDim2.new(
			main.Position.X.Scale,
			main.Position.X.Offset + (targetPos.X.Offset - main.Position.X.Offset) * 0.2,
			main.Position.Y.Scale,
			main.Position.Y.Offset + (targetPos.Y.Offset - main.Position.Y.Offset) * 0.2
		)
	end)
end

